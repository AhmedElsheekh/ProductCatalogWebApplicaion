@using Product_Catalog_Web_Application.Core.ViewModels
@model IEnumerable<ProductDetailsVM>

<a asp-controller="Product" asp-action="Create" class="btn btn-primary">Create New Product</a>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead class="text-bold">
            <tr>
                <td>@Html.DisplayNameFor(x => x.Name)</td>
                <td>@Html.DisplayNameFor(x => x.Price)</td>
                <td>@Html.DisplayNameFor(x => x.Category)</td>
                <td>@Html.DisplayNameFor(x => x.CreatedByUser)</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Category</td>
                    <td>@item.CreatedByUser</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <h1 class="alert alert-warning">There is no products yet</h1>
}

<a asp-controller="User" asp-action="LogOut" class="btn btn-primary">LogOut</a>
