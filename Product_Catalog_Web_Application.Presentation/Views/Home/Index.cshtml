@using Product_Catalog_Web_Application.Core.ViewModels
@model IEnumerable<ProductDetailsVM>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<a asp-controller="User" asp-action="Login" class="btn btn-primary">Sign In</a>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead class="text-bold">
            <tr>
                <td>@Html.DisplayNameFor(x => x.Name)</td>
                <td>@Html.DisplayNameFor(x => x.Price)</td>
                <td>@Html.DisplayNameFor(x => x.Category)</td>
                <td>@Html.DisplayNameFor(x => x.CreatedByUser)</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Category</td>
                    <td>@item.CreatedByUser</td>
                    <td>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <h1 class="alert alert-warning">There is no products yet</h1>
}

<div class="container">
    <form asp-action="Index">
        <div class="row form-group">
            <div class="col-6">
                <input type="text" name="search" placeholder="Category" class="form-control" />
            </div>
            <div class="col-3">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>